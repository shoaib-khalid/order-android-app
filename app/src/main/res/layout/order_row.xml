<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/order_card_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <RelativeLayout
                android:id="@+id/user_name_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/order_row_name_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/invoice_rel_layout"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/card_name_value"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/invoice_rel_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true">

                    <TextView
                        android:id="@+id/order_invoice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/tv_invoice_number" />

                    <TextView
                        android:id="@+id/card_invoice_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/order_invoice"
                        android:text="@string/tv_invoice_number_value" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/price_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user_name_info">

                <RelativeLayout
                    android:id="@+id/date_rel_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/total_rel_layout">

                    <TextView
                        android:id="@+id/order_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/order_placed_date" />

                    <TextView
                        android:id="@+id/order_date_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_toRightOf="@+id/order_date"
                        android:text="@string/order_placed_date_value" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/total_rel_layout"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentRight="true">

                    <TextView
                        android:id="@+id/order_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/total"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/order_total_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/order_total"
                        android:text="@string/order_amount_value"
                        android:textStyle="bold" />

                </RelativeLayout>

            </RelativeLayout>

            <View
                android:id="@+id/divider_card"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="10dp"
                android:background="@color/light_grey"
                app:layout_constraintTop_toBottomOf="@id/price_info"
                />


            <RelativeLayout
                android:id="@+id/rl_items"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="5dp"
                app:layout_constraintTop_toBottomOf="@+id/divider_card"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/order_items_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical" />

            </RelativeLayout>

            <View
                android:id="@+id/divider_card2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_grey"
                app:layout_constraintTop_toBottomOf="@id/rl_items"
                />

            <LinearLayout
                android:id="@+id/layout_order_type_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:showDividers="middle"
                android:layout_marginTop="10dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/divider_card2">

                <LinearLayout
                    android:id="@+id/layout_order_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:layout_weight="1">
                
                    <TextView
                        android:id="@+id/order_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_type"
                        android:textColor="@color/dark_grey"
                        android:textSize="10sp"/>

                    <TextView
                        android:id="@+id/order_type_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_type_value"
                        android:textColor="@color/dark_grey"
                        android:textSize="10sp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_order_curr_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/order_curr_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_status"
                        android:textColor="@color/dark_grey"
                        android:textSize="10sp"/>

                    <TextView
                        android:id="@+id/order_curr_status_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_curr_status_value"
                        android:textColor="@color/dark_grey"
                        android:textSize="10sp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/order_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:showDividers="middle"
                android:layout_marginTop="10dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/layout_order_type_row">


                <LinearLayout
                    android:id="@+id/layout_buttons_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_order_details"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:minWidth="72dp"
                        android:minHeight="36dp"
                        android:padding="0dp"
                        android:textColor="@color/sf_primary"
                        app:strokeColor="@color/sf_primary"
                        android:text="@string/order_details"
                        android:textSize="8sp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_edit_order"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:minWidth="72dp"
                        android:minHeight="36dp"
                        android:padding="5dp"
                        android:textColor="@color/sf_primary"
                        android:text="@string/edit_order"
                        android:textSize="8sp"
                        app:strokeColor="@color/sf_primary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_track_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="72dp"
                        android:minHeight="36dp"
                        android:visibility="gone"
                        android:padding="5dp"
                        android:text="@string/track_order"
                        android:backgroundTint="@color/sf_primary"
                        android:textSize="8sp"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_order_status"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/order_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_status"
                        android:visibility="gone"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/order_status_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_status_value"
                        android:textColor="@color/sf_accept_button"
                        android:textSize="14sp"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_order_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="72dp"
                        android:minHeight="36dp"
                        android:visibility="gone"
                        android:padding="5dp"
                        android:text="@string/pickup_orders"
                        android:backgroundTint="@color/sf_primary"
                        android:textSize="8sp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_order_status_dispatched"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:minWidth="72dp"
                        android:minHeight="36dp"
                        android:visibility="gone"
                        android:padding="5dp"
                        android:text="@string/dispatched_orders"
                        android:textColor="@color/dark_grey"
                        app:strokeColor="@color/dark_grey"
                        android:clickable="false"
                        android:textSize="8sp"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_buttons_right"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    >

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_order_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:backgroundTint="@color/sf_cancel_button"
                        android:minWidth="72dp"
                        android:minHeight="36dp"
                        android:padding="5dp"
                        android:text="@string/cancel_order"
                        android:textSize="8sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_order_accept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:backgroundTint="@color/sf_accept_button"
                        android:minWidth="72dp"
                        android:minHeight="36dp"
                        android:padding="5dp"
                        android:text="@string/accept_order"
                        android:textSize="8sp" />


                </LinearLayout>

            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>