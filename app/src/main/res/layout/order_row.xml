                        android:layout_toEndOf="@+id/driver_contact_label" />

                    <ImageView
                        android:id="@+id/address_icon_phone"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_marginLeft="5dp"
                        android:visibility="gone"
                        android:layout_toEndOf="@+id/driver_contact_value"
                        android:src="@drawable/ic_baseline_phone_24" />

                </RelativeLayout>

            </RelativeLayout>

            <View
                android:id="@+id/divider_card9"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="10dp"
                android:background="@color/light_grey"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/rl_rider_details" />


