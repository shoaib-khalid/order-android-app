<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/custom_action_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true" />

        <RelativeLayout
            android:id="@+id/rl_rider_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp">

            <RelativeLayout
                android:id="@+id/layout_delivery_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/delivery_by_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:minWidth="80dp"
                    android:textStyle="bold"
                    android:text="Delivery By:" />

                <TextView
                    android:id="@+id/delivery_by_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/delivery_by_label" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_driver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_delivery_by">

                <TextView
                    android:id="@+id/driver_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:minWidth="80dp"
                    android:textStyle="bold"
                    android:text="Driver:" />

                <TextView
                    android:id="@+id/driver_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/driver_label" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_driver">

                <TextView
                    android:id="@+id/contact_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:minWidth="80dp"
                    android:textStyle="bold"
                    android:text="Contact:" />

                <TextView
                    android:id="@+id/contact_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/contact_label" />

                <ImageView
                    android:id="@+id/address_icon_phone"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"
                    android:layout_toEndOf="@+id/contact_value"
                    android:src="@drawable/ic_baseline_phone_24" />

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:id="@+id/divider_card"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"
            android:background="@color/light_grey"
            android:layout_below="@+id/rl_rider_details"
            />

        <WebView
            android:id="@+id/track_order_webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/divider_card"/>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>