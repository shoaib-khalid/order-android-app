<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="360dp"
    android:paddingHorizontal="25dp"
    android:paddingVertical="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/success_tick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/success_tick"
        android:contentDescription="@string/successfully_redeemed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/success_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/successfully_redeemed"
        android:textAlignment="center"
        android:textSize="28sp"
        android:layout_marginVertical="20dp"
        style="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintTop_toBottomOf="@id/success_tick"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <Button
        android:id="@+id/close_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/close"
        android:layout_marginVertical="20dp"
        android:paddingVertical="17dp"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/success_message"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>